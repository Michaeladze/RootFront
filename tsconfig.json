{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "build",
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["css", ".css", "styled", "styles"]
      }
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react"
  },
  "files": ["./src/index.ts"],
  "include": ["src/*"],
  "exclude": ["dist", "node_modules", "**/*.spec.*", "**/*.stories.*", "**/*.mocks.*"]
}
