{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "outDir": "dist",
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["css", ".css", "styled", "styles"]
      }
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react"
  },
  "files": ["./src/.storybook/custom.d.ts", "./src/index.ts"],
  "include": ["src"],
  "exclude": ["dist", "node_modules", "**/*.spec.*", "**/*.stories.*"]
}
